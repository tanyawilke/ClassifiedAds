<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1,EmulateIE7" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FreeAds</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-84922051-1', 'auto');
      ga('send', 'pageview');
    </script>
    <div class="background">
        <div class="page">
            <div id="_content" class="">
                <div id="_navbar" class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("FreeAds", "Index", "Home", null, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                                <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                                <li>@Html.ActionLink("View all adverts", "Index", "AdsViewAdverts")</li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink("View my adverts", "MyAdverts", "AdsViewAdverts")</li>
                                }
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
                <div id="_jumbotron" class="jumbotron">
                    <div class="container">
                        <div class="lineT2 marB5 marT5"></div>
                        <div class="lineT10 marB40"></div>
                        <h1>FreeAds</h1>
                        <h2>Free Classified Ads</h2>
                        <div class="sub-navbar lineT2 marT40 lineB2 marB40">
                            aaaa
                        </div>
                    </div>
                </div>
                <div class="container">
                    @RenderBody()
                    <div class="container marT20 marB10 col-md-12">
                        <footer id="_footer">
                            <div class="text-align-center">
                                &copy; @DateTime.Now.Year - Your Wealth Limited | @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home") |
                                @Html.ActionLink("Terms of use", "TermsUse", "Home")
                            </div>
                        </footer>
                    </div>
                </div>
                
                
            </div> 
        </div> 
    </div> 
   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(window).bind("load", function () {
            SetFooter();
        });

        $(window).on("resize", function () {
            SetFooter();
        });

        function SetFooter() {
            var winHeight = window.innerHeight;
            //var contentHeight = document.getElementById("_navbar").clientHeight + document.getElementById("_jumbotron").clientHeight + document.getElementById("_content").clientHeight;
            var contentHeight = document.getElementById("_content").clientHeight;
            var footerHeight = document.getElementById("_footer").clientHeight;
            var height = winHeight - (contentHeight + footerHeight);

            if (height > 0) {
                $('#_footer').addClass('stickybottom');
            }
        }
    </script>
</body>
</html>
