@model ClassifiedAdsApp.Models.RemovePhoneNumberViewModel
@{
    ViewBag.Title = "Remove your phone number";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="container well">
                <h3>Are you sure you want to delete this?</h3>
                @using (Html.BeginForm("RemovePhoneNumber", "Manage"))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.DisplayNameFor(m => m.Number)
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Number)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button type="submit" class="btn btn-default">Submit <span class="glyphicon glyphicon-send"></span></button>
                        </div>
                    </div>
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>